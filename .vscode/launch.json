{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Godot Debug - Editor",
      "type": "cppdbg",
      "request": "launch",
      "program": "",
      "args": [
        "--path",
        "${workspaceFolder}/UnamedProject/",
        "--editor"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/UnamedProject/",
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Allow pending breakpoints",
          "text": "set breakpoint pending on",
          "ignoreFailures": true
        },
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "linux": {
        "program": "${workspaceFolder}/../godot_PU/bin/godot.linuxbsd.editor.x86_64"
      },
      "windows": {
        "program": "${workspaceFolder}\\..\\godot_PU\\bin\\godot.windows.editor.x86_64.exe"
      }
    },
    {
