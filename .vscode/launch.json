{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Godot Debug (Fast)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/../godot_PU/bin/godot.linuxbsd.editor.x86_64",
      "args": [
        "--path",
        "${workspaceFolder}/UnamedProject/",
        "--editor"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/UnamedProject/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Allow pending breakpoints",
          "text": "set breakpoint pending on",
          "ignoreFailures": true
        },
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Godot Debug (Rebuild + Run)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/../godot_PU/bin/godot.linuxbsd.editor.x86_64",
      "args": [
        "--path",
        "${workspaceFolder}/UnamedProject/",
        "--editor"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/UnamedProject/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "build_extension_debug",
      "setupCommands": [
        {
          "description": "Allow pending breakpoints",
          "text": "set breakpoint pending on",
          "ignoreFailures": true
        },
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
